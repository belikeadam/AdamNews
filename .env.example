# =============================================================================
# AdamNews Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# -----------------------------------------------------------------------------
# PostgreSQL (Docker)
# -----------------------------------------------------------------------------
POSTGRES_PASSWORD=your_strong_postgres_password_here

# -----------------------------------------------------------------------------
# Redis (Docker)
# -----------------------------------------------------------------------------
REDIS_PASSWORD=your_strong_redis_password_here

# -----------------------------------------------------------------------------
# Strapi CMS
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
STRAPI_JWT_SECRET=your_strapi_jwt_secret_here
STRAPI_ADMIN_JWT_SECRET=your_strapi_admin_jwt_secret_here
# Comma-separated, generate 4 keys: openssl rand -base64 16 (repeat 4x)
STRAPI_APP_KEYS=key1,key2,key3,key4
# Create in Strapi Admin > Settings > API Tokens
STRAPI_API_TOKEN=your_strapi_api_token_here

# -----------------------------------------------------------------------------
# Next.js / NextAuth
# -----------------------------------------------------------------------------
NEXTAUTH_URL=http://localhost:3000
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here

# -----------------------------------------------------------------------------
# Google OAuth (NextAuth)
# -----------------------------------------------------------------------------
# Create at: https://console.cloud.google.com/apis/credentials
AUTH_GOOGLE_ID=your_google_client_id_here
AUTH_GOOGLE_SECRET=your_google_client_secret_here

# -----------------------------------------------------------------------------
# Stripe
# -----------------------------------------------------------------------------
# Get from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
# Get from: stripe listen --print-secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs — create in Stripe Dashboard > Products
STRIPE_STANDARD_MONTHLY_PRICE_ID=price_standard_monthly
STRIPE_STANDARD_ANNUAL_PRICE_ID=price_standard_annual
STRIPE_PREMIUM_MONTHLY_PRICE_ID=price_premium_monthly
STRIPE_PREMIUM_ANNUAL_PRICE_ID=price_premium_annual

# -----------------------------------------------------------------------------
# Upstash Redis (Production — replaces Docker Redis)
# -----------------------------------------------------------------------------
# Get from: https://console.upstash.com
UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# -----------------------------------------------------------------------------
# Neon PostgreSQL (Production — replaces Docker PostgreSQL)
# -----------------------------------------------------------------------------
# Get from: https://console.neon.tech
DATABASE_URL=postgresql://user:pass@ep-xxx.us-east-2.aws.neon.tech/AdamNews?sslmode=require

# -----------------------------------------------------------------------------
# Strapi URLs
# -----------------------------------------------------------------------------
# Public URL (client-side, browser requests)
NEXT_PUBLIC_STRAPI_URL=http://localhost:1337
# Internal URL (server-side, Docker network)
STRAPI_URL=http://strapi:1337
